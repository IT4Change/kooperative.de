---
import ContentLayout from '../../layouts/ContentLayout.astro';
import Breadcrumb from '../../components/common/Breadcrumb.astro';
import { getEventsBySection, getSubPagesBySectionSlug } from '../../lib/strapi';

let events: any[] = [];
let error = false;

try {
  const response = await getEventsBySection('gaeste');
  events = response.data || [];
} catch (e) {
  console.error('Failed to fetch events for section "gaeste":', e);
  error = true;
}

let sidebarLinks: any[] = [];
try {
  const response = await getSubPagesBySectionSlug('gaeste');
  const allSubPages = response.data || [];
  sidebarLinks = [
    ...allSubPages.map((sp: any) => ({
      title: sp.title,
      slug: sp.slug,
      href: `/gaeste/${sp.slug}`,
    })),
    { title: 'Veranstaltungen', slug: 'veranstaltungen', href: '/gaeste/veranstaltungen' },
  ];
} catch (e) {
  // Sidebar links are optional
}

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'G\u00e4ste', href: '/gaeste/' },
  { label: 'Veranstaltungen' },
];
---

<ContentLayout
  title="Veranstaltungen - G\u00e4ste"
  section="G\u00e4ste"
  showSidebar={sidebarLinks.length > 0}
  sidebarLinks={sidebarLinks}
>
  <Breadcrumb items={breadcrumbs} />

  <h1 class="mb-8">Veranstaltungen</h1>

  {error && (
    <p class="text-gray-500 italic mb-8">
      Veranstaltungen konnten nicht geladen werden. Bitte versuchen Sie es sp&auml;ter erneut.
    </p>
  )}

  {!error && events.length === 0 && (
    <p class="text-gray-500 italic">
      Derzeit sind keine Veranstaltungen f\u00fcr G\u00e4ste geplant.
    </p>
  )}

  {events.length > 0 && (
    <div class="space-y-6">
      {events.map((event: any) => {
        const startDate = new Date(event.startDate);
        const endDate = event.endDate ? new Date(event.endDate) : null;
        const formattedStart = startDate.toLocaleDateString('de-DE', {
          weekday: 'long',
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        });
        const formattedTime = startDate.toLocaleTimeString('de-DE', {
          hour: '2-digit',
          minute: '2-digit',
        });

        return (
          <article class="bg-white rounded-xl border border-gray-200 p-5 md:p-6">
            <div class="flex flex-col sm:flex-row sm:items-start gap-4">
              <div class="shrink-0 text-center bg-primary-50 rounded-lg px-4 py-3 border border-primary-100">
                <div class="text-2xl font-bold text-primary-800">
                  {startDate.getDate()}
                </div>
                <div class="text-sm text-primary-600 uppercase">
                  {startDate.toLocaleDateString('de-DE', { month: 'short' })}
                </div>
                <div class="text-xs text-gray-500">
                  {startDate.getFullYear()}
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h2 class="text-lg font-semibold text-primary-800 mb-1">
                  {event.title}
                </h2>
                <p class="text-sm text-gray-500 mb-2">
                  {formattedStart}, {formattedTime} Uhr
                  {event.location && ` \u2013 ${event.location}`}
                </p>
                {event.description && (
                  <p class="text-gray-600 text-sm leading-relaxed line-clamp-3">
                    {event.description}
                  </p>
                )}
              </div>
            </div>
          </article>
        );
      })}
    </div>
  )}
</ContentLayout>
