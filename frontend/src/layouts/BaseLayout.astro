---
interface Props {
  title: string;
  description?: string;
  class?: string;
}

const {
  title,
  description = 'Kooperative Dürnau – Gemeinschaftlich leben, arbeiten und gestalten.',
  class: className,
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,300;0,400;0,600;0,700;1,400;1,600&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;0,8..60,700;1,8..60,400;1,8..60,600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <title>{title} | Kooperative Dürnau</title>
  </head>
  <body class:list={['min-h-screen flex flex-col bg-warm-50 text-gray-800', className]}>
    <slot />
  </body>
</html>
