---
interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  overlay?: boolean;
}

const { title, subtitle, image, overlay = true } = Astro.props;
---

<section
  class:list={[
    'relative flex items-center justify-center h-64 md:h-96 overflow-hidden',
    !image && 'bg-gradient-to-br from-primary-700 via-primary-600 to-primary-800',
  ]}
>
  {image && (
    <img
      src={image}
      alt=""
      class="absolute inset-0 w-full h-full object-cover"
      loading="eager"
    />
  )}

  {image && overlay && (
    <div class="absolute inset-0 bg-primary-900/50" />
  )}

  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl">
    <h1 class="text-white drop-shadow-lg">{title}</h1>
    {subtitle && (
      <p class="mt-3 md:mt-4 text-lg md:text-xl text-primary-100 drop-shadow">
        {subtitle}
      </p>
    )}
  </div>
</section>
